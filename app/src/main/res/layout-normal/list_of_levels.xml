<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_of_levels_bacground_dawn1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dawn" />

    <LinearLayout
        android:id="@+id/contsiner1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back_btn_for_list_of_levels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/startbtn_white95_press_gray100"
                    android:text="@string/back_btn_for_levels"
                    android:textAllCaps="false"
                    android:textColor="@color/white95"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container4_for_text_name_of_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/container5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/column1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/senen_imbtn"
                            android:layout_width="380dp"
                            android:layout_height="290dp"
                            android:backgroundTint="#00FFFFFF"
                            android:scaleType="fitCenter"
                            android:tint="#00FFFFFF"
                            app:srcCompat="@drawable/senen_imbtn" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/column2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/detective_imbtn"
                            android:layout_width="380dp"
                            android:layout_height="290dp"
                            android:backgroundTint="#00FFFFFF"
                            android:scaleType="fitCenter"
                            android:tint="#00FFFFFF"
                            app:srcCompat="@drawable/detective_imbtn" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/column3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/comedy_imbtn"
                            android:layout_width="380dp"
                            android:layout_height="290dp"
                            android:backgroundTint="#00FFFFFF"
                            android:scaleType="fitCenter"
                            android:tint="#00FFFFFF"
                            app:srcCompat="@drawable/comedy_imbtn" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/column4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sedze_imbtn"
                            android:layout_width="380dp"
                            android:layout_height="290dp"
                            android:backgroundTint="#00FFFFFF"
                            android:scaleType="fitCenter"
                            android:tint="#00FFFFFF"
                            app:srcCompat="@drawable/sedze_imbtn" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>